                                <div class="col-sm-2 green">
                                    <p class="card-text"><i class="bi bi-arrow-down-up"></i></p>
                                </div>
                            <table>
                                    <th>
                                        <td class="card-text" style="color: blue;">Concepto</td>
                                      </th>
                                    
                                    <% concepto.forEach(function(value) {%>
                                        <tr>
                                        <td>
                                    <div class="col-sm-5">
                                        <span class="card-text" style="color: blue;"><%= value %></span>
                                    </div>
                                        </td>
                                        </tr>
                                        <% }) %> 
                            </table>
                            <table>
                                <th>
                                    <td class="card-text" style="color: blue;">Monto</td>
                                </th>
                                <% movimientos.forEach(function(value) {%>
                                <tr>
                                    <td>
                                <div class="col-sm-5">
                                    <span class="card-text" style="color: blue;"><%= value %></span>
                                </div>
                                    </td>
                                </tr>
                                <% }) %>                                                                      
                        </table>
                            </div>
                        </div>                        
                    </div>
