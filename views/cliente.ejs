<%- include('template/header') %>

<header class="d-flex">

    <% if (login) { %>
    <div class="d-flex w-100 justify-content-between align-items-center m-auto  p-3">
        <span class="letra-header-1"> Bluezone</span>
        <di>
            <span class="letra-header-1">Hola<strong >, <%= name %></strong></span>
            <% } %>
        </di>
  
        <a class="letra-header-1" style="font-size: 20px" href="logout">Cerrar sesión</a>
    </div>
  
  </header>


<div class="row">
    <div class="container-top azul">
        <div class="text-start m-1">
            <a href="javascript:window.history.back();" class="link-blanco"><span class="material-icons text-decoration-none">arrow_back</span></a>
        </div>
        <div class="text-end">
            <span><%= razon %></span>
        </div>
        <h5 class="main-title"><%= razon %></h5>
        <p>Fecha de inicio - <%= fecha %></p>
        <div class="buttons-links">
            <div class="d-flex flex-column align-items-center">
                <span class="material-icons azul icono-redondo p-1">rss_feed</span>
                <span class="azul sub-menu"> RRSS</span>
            </div>
            <div class="d-flex flex-column align-items-center">
                <span class="material-icons azul icono-redondo p-1">call</span>
                <span class="azul sub-menu">Contacto</span>
            </div>
