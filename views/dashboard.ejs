<main class="mx-3">
  <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Proyectos</h1>
    <div class="cardAdd cardSemaforo shadow">
      <button onclick="mostrarWIP()">
        <span class="dot dotWIPreference marginSemaforo"></span>
        <p class="d-inline marginSemaforo"><strong>WIP</strong></p>
      </button>
      <button onclick="mostrarWIF()">
        <span class="dot dotWIFreference marginSemaforo"></span>
        <p class="d-inline marginSemaforo"><strong>WIF</strong></p>
      </button>
      <button onclick="mostrarCM()">
        <span class="dot dotCMreference marginSemaforo"></span>
        <p class="d-inline marginSemaforo"><strong>CM</strong></p>
      </button>
      <button onclick="mostrarDMT()">
        <span class="dot dotDMTreference marginSemaforo"></span>
        <p class="d-inline marginSemaforo"><strong>DMT</strong></p>
      </button>
      <button onclick="mostrarAP()">
        <span class="dot dotAPreference marginSemaforo"></span>
        <p class="d-inline marginSemaforo"><strong>AP</strong></p>
      </button>
      <button onclick="mostrarFinalizados()">
        <span class="dot dotFinalizadoreference marginSemaforo"></span>
        <p class="d-inline marginSemaforo"><strong>Finalizado</strong></p>
      </button>
      <button onclick="mostrarOthers()">
        <span class="dot dotOthersreference marginSemaforo"></span>
        <p class="d-inline marginSemaforo"><strong>Others</strong></p>
      </button>
    </div>
  </div>
</main>

<% if (proyectos.length > 0) { %>
<div class="cardsContainer mx-5"> <!--  -->
  <% proyectos.forEach(function(value) { %> 

  <div class="cardAdd openSans shadow WIPcard rounded-3 mb-4">
    <img class="mx-auto my-1 d-block" src="/image/logo-placeholder-1.png" alt="Client logo" />

    <div class="card-body d-flex flex-column">
      <h5 class="d-inline openSans clienteTitle fs-1"><strong><%= value.razon_social %></strong></h5>
      <h5 class="d-inline openSans clienteTitle fs-3"><%= value.responsable_empresa %></h5>
      <p class="fecha openSans "><%= value.fecha_eta %></p>
      <p class="fecha openSans "><%= value.descripcion %></p>
      <div class="saldo fs-4">
        <p class="d-inline openSans">Saldo: </p>
        <p class="d-inline openSans"><%= value.Saldo %></p>
      </div>
      <span class="dot dotWIP"></span></br>
      <a href="/cliente/<%= value.id_cliente %>" class="btn btn-primary bc546bff openSans"><strong>Ver Proyecto</strong></a>
    </div>
  </div>
  <% }) %>
</div>
<% } else { %>
  <h1>No hay proyectos cargados.</h1>
<% } %>

