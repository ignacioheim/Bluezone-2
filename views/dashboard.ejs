              <span data-feather="user" ></span>
              Nuevo cliente
            </a>
          </li>
        </ul>
      </div>
    </div>
  </div>
</nav>


<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
  <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Proyectos</h1>
    <div class="card cardSemaforo shadow">
      <span class="dot dotWIP marginSemaforo"></span>
      <p class="d-inline marginSemaforo"><strong>WIP</strong></p>
      <span class="dot dotWIF marginSemaforo"></span>
      <p class="d-inline marginSemaforo"><strong>WIF</strong></p>
      <span class="dot dotCM marginSemaforo"></span>
      <p class="d-inline marginSemaforo"><strong>CM</strong></p>
      <span class="dot dotDMT marginSemaforo"></span>
      <p class="d-inline marginSemaforo"><strong>DMT</strong></p>
      <span class="dot dotAP marginSemaforo"></span>
      <p class="d-inline marginSemaforo"><strong>AP</strong></p>
      <span class="dot dotFinalizado marginSemaforo"></span>
      <p class="d-inline marginSemaforo"><strong>Finalizado</strong></p>
      <span class="dot dotOthers marginSemaforo"></span>
      <p class="d-inline marginSemaforo"><strong>Others</strong></p>
    </div>
  </div>
</main>

<% if (proyectos.length > 0) { %>
<div class="cardsContainer col-md-9 ms-sm-auto col-lg-10 px-md-4"> <!--  -->
  <% proyectos.forEach(function(value) { %> 
  <div class="card openSans shadow dashboardCard">
    <img id="imagen-1" class="mx-auto my-1" src="/uploads/<%= value.imagen %>" alt="Cliente logo">
    <div class="card-body">
      <h5 class="d-inline openSans clienteTitle"><strong><%= value.razon_social %></strong></h5>
      <h5 class="d-inline openSans clienteTitle"><%= value.responsable_empresa %></h5>
      <p class="fecha openSans"><%= value.fecha_eta %></p><p class="fecha openSans"><%= value.descripcion %></p>
      <div class="saldo">
        <p class="d-inline openSans">Saldo: </p>
        <p class="d-inline openSans"><%= value.Saldo %></p>
      </div>
      <span class="dot dotWIP"></span></br>
      <a href="/cliente/<%= value.id_cliente %>" class="btn btn-primary bc546bff openSans"><strong>Ver Proyecto</strong></a>
    </div>
  </div>
  <% }) %>
</div>
<% } else { %>
  <h1>No hay proyectos cargados.</h1>
<% } %>

